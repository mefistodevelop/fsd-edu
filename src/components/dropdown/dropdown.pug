mixin dropdown(options)
  .dropdown
    label.dropdown__label= options.label
      span.dropdown__arrow &#xe901
      input(class="dropdown__top" type="text" readonly)
      .dropdown__menu.hidden
        ul.dropdown__items
          each item in options.items
            li.dropdown__item
              .dropdown__element= item
              .dopdown__quantity
                span.dropdown__control.dropdown__control_minus -
                span.dropdown__score 0
                span.dropdown__control.dropdown__control_plus +

